<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" style="-fx-background-color: D2F2CD;"
      spacing="16.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="lblTitle" alignment="CENTER" text="Inserisci i Dati">
            <font>
                <Font size="64.0" />
            </font>
        </Label>
        <TextField fx:id="txtNome" minHeight="40" maxWidth="300"
                   promptText="Nome"/>
        <TextField fx:id="txtCognome" minHeight="40" maxWidth="300"
                   promptText="Cognome"/>
        <TextField fx:id="txtEmail" minHeight="40" maxWidth="300"
                   promptText="Email"/>
        <PasswordField fx:id="txtPassword" minHeight="40"
                       maxWidth="300" promptText="Password"/>
        <Button fx:id="btnRegister" mnemonicParsing="false" minHeight="40"
                maxWidth="300" text="Register" />
        <Hyperlink fx:id="linkLogin" text="Login" />
    </children>
</VBox>